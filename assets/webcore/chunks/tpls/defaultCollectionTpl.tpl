<div class="item noborder">
    <div class="row">
        <div class="col-md-4 col-12">
            <div class="image">
                <a href="[[~[[+id]]]]" class="blink">
                    <img src="[[+image:phphumbon=`w=255&h=170`]]"
                            alt="[[+pagetitle]]"
                            title="[[+pagetitle]]"
                            class="img-responsive"
                            style="opacity: 1;">
                </a>
            </div>
        </div>
        <div class="col-md-8 col-12">
            <div class="text">
                <div class="title">
                    <a href="[[~[[+id]]]]">[[+pagetitle]]</a></div>
                <p>[[+introtext:ifempty=`[[+description]]`]]</p>
                <a href="[[~[[+id]]]]"
                        class="button button_white"><span>Подробнее</span></a>
            </div>
        </div>
    </div>
</div>
