<div class="col-md-4 col-sm-6 col-xs-6">
    <div class="item wline">
        <a href="[[~[[+id]]]]" class="dark_block_animate"></a>
        <div class="img_block scale_block_animate"
                style="background-image: url([[+image:default=`assets/c-images/category/cat-no-image.jpg`]]);">
        </div>
        <div class="info">
            <div class="title">
                <div class="bg_main_color d-inline-block item__title-link">
                    <a href="[[~[[+id]]]]" class="outer_text">[[+pagetitle]]</a>
                </div>
            </div>
            [[+description:notempty=`<div class="text">[[+description]]</div>`]]
        </div>
    </div>
</div>